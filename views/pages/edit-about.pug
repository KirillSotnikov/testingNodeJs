extends ../_template

block content
  .container.pt-5.pb-5
    //- h1 #{aboutInfo.title}
    //- p #{aboutInfo.description}
    form(action='/edit-about-info-method' method="POST" enctype="application/x-www-form-urlencoded")
      h4.form__subtitle Edit About Info
      p.status
      .form-group
          //- label(for='exampleInputEmail1') Имя
          input#exampleInputEmail1.form-control(type='text',value= aboutInfo.title, name="title", aria-describedby='emailHelp', placeholder='Title')
      .form-group
          //- label(for='exampleFormControlTextarea1') Ваше сообщение
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="description" placeholder="Description">#{aboutInfo.description}</textarea>
      button.btn.btn-primary.form__btn-send(type='submit') Отправить